<?xml version="1.0"?>
<!--Initialise our robot structure with its name-->
<robot name="patrol_bot">

  <!--Different colours setups with codes-->
  <material name="bluelike">
    <color rgba="0.337 0.357 0.91 0.8"/>
  </material>

  <material name="cypressgreen">
    <color rgba="0.29 0.929 0.765 0.8"/>
  </material>

  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <material name="orange">
    <color rgba="0.949 0.565 0.094 1"/>
  </material>


  <!--Base link of the robot-First rigid part to start from-->
  <link name="base_link">

    <!--Visual of the robot to create its geometry, colour, origin, etc-->
    <visual>
      <geometry><box size="0.5 0.2 0.1"/></geometry>
      <material name="orange" />
      <origin xyz="0 0 0.05" rpy="0 0 0" />
    </visual>

    <!--Collision geometry-->
    <collision><geometry><box size="0.5 0.2 0.1"/></geometry></collision>

    <!--Inertia description-->
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!--Making the wheels for the robot-->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <material name="cypressgreen" />
      <origin xyz="0 0 0.025" rpy="0 0 0" />
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <material name="blue" />
      <origin xyz="0 0 -0.025" rpy="0 0 0" />
    </visual>
  </link>

  <!--We need joints for parent-child relationship of links-->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 -0.1 0" rpy="1.570 0 0" />
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0.1 0" rpy="1.570 0 0" />
  </joint>

  <!-- Add element on-board stereoscopic camera etc -->
  <link name="addon_base">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="red" />
      <origin xyz="0 0 0.05" rpy="0 0 0" />
    </visual>
  </link>

  <joint name="addon_base_joint" type="continuous">
    <parent link="base_link"/>
    <child link="addon_base"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>



</robot>